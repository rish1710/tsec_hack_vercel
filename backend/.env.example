# Murph Backend Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/murph
REDIS_URL=redis://localhost:6379

# ============================================================================
# AI SERVICES (Optional - for future LLM integration)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
CLAUDE_API_KEY=sk-your-claude-key-here

# ============================================================================
# FINTERNET PAYMENT GATEWAY (REQUIRED)
# ============================================================================
FINTERNET_BASE_URL=https://api.fmm.finternetlab.io
FINTERNET_API_KEY=your_finternet_api_key_here

# ============================================================================
# CORS ORIGINS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# SESSION DEFAULTS
# ============================================================================
DEFAULT_COST_PER_MINUTE=0.5
MIN_SESSION_DURATION=5
MAX_SESSION_DURATION=480
